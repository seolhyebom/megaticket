{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DynamoDBMinimalAccess",
            "Effect": "Allow",
            "Action": [
                "dynamodb:GetItem",
                "dynamodb:PutItem",
                "dynamodb:UpdateItem",
                "dynamodb:DeleteItem",
                "dynamodb:Query",
                "dynamodb:Scan",
                "dynamodb:TransactWriteItems",
                "dynamodb:BatchWriteItem",
                "dynamodb:BatchGetItem",
                "dynamodb:DescribeTable"
            ],
            "Resource": [
                "arn:aws:dynamodb:ap-northeast-2:626614672806:table/KDT-Msp4-PLDR-*",
                "arn:aws:dynamodb:ap-northeast-2:626614672806:table/KDT-Msp4-PLDR-*/index/*",
                "arn:aws:dynamodb:ap-northeast-1:626614672806:table/KDT-Msp4-PLDR-*",
                "arn:aws:dynamodb:ap-northeast-1:626614672806:table/KDT-Msp4-PLDR-*/index/*"
            ]
        }
    ]
}
