{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        ".env"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "env": [
                "AWS_REGION",
                "NEXT_PUBLIC_AWS_REGION",
                "DR_RECOVERY_MODE"
            ]
        },
        "clean": {
            "cache": false
        },
        "lint": {}
    }
}